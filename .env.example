# ARCO Affiliate Platform Environment Configuration
# Copy this file to .env.local and fill in your actual credentials

# ===== AMAZON ASSOCIATES CONFIGURATION =====
AMAZON_CLIENT_ID=your_amazon_client_id_here
AMAZON_CLIENT_SECRET=your_amazon_client_secret_here
AMAZON_REDIRECT_URI=http://localhost:3000/auth/amazon/callback
AMAZON_PARTNER_TAG=your_amazon_partner_tag_here
AMAZON_ACCESS_KEY=your_amazon_access_key_here
AMAZON_SECRET_KEY=your_amazon_secret_key_here

# ===== MAGAZINE LUIZA PARCEIRO CONFIGURATION =====
MAGALU_CLIENT_ID=your_magalu_client_id_here
MAGALU_CLIENT_SECRET=your_magalu_client_secret_here
MAGALU_REDIRECT_URI=http://localhost:3000/auth/magalu/callback
MAGALU_PARTNER_ID=your_magalu_partner_id_here

# ===== SHOPEE AFFILIATE CONFIGURATION =====
SHOPEE_CLIENT_ID=your_shopee_client_id_here
SHOPEE_CLIENT_SECRET=your_shopee_client_secret_here
SHOPEE_REDIRECT_URI=http://localhost:3000/auth/shopee/callback
SHOPEE_SHOP_ID=your_shopee_shop_id_here

# ===== MERCADO LIVRE AFFILIATE CONFIGURATION =====
MERCADOLIVRE_CLIENT_ID=your_mercadolivre_client_id_here
MERCADOLIVRE_CLIENT_SECRET=your_mercadolivre_client_secret_here
MERCADOLIVRE_REDIRECT_URI=http://localhost:3000/auth/mercadolivre/callback

# ===== DATABASE CONFIGURATION =====
# For storing affiliate credentials and analytics
DATABASE_URL=postgresql://username:password@localhost:5432/arco_affiliate
REDIS_URL=redis://localhost:6379

# ===== JWT AND SESSION MANAGEMENT =====
JWT_SECRET=your_super_secure_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# ===== WEBHOOK CONFIGURATIONS =====
# For receiving affiliate conversion notifications
AMAZON_WEBHOOK_SECRET=your_amazon_webhook_secret
MAGALU_WEBHOOK_SECRET=your_magalu_webhook_secret
SHOPEE_WEBHOOK_SECRET=your_shopee_webhook_secret

# ===== ANALYTICS AND TRACKING =====
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=your_facebook_pixel_id
HOTJAR_ID=your_hotjar_id

# ===== EMAIL CONFIGURATION =====
# For affiliate notifications and reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ===== PAYMENT PROCESSING =====
# For handling affiliate payouts
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ===== RATE LIMITING AND SECURITY =====
RATE_LIMIT_REQUESTS_PER_MINUTE=100
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===== LOGGING AND MONITORING =====
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# ===== SUPABASE DATABASE CONFIGURATION =====
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===== AUTHENTICATION - OAuth2 PROVIDERS =====
# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth2
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters_random
NEXTAUTH_URL=http://localhost:3000

# ===== SECURITY KEYS =====
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_random
ENCRYPTION_KEY=your_encryption_key_here_32_characters_exactly

# ===== EMAIL SERVICE =====
EMAIL_FROM=noreply@yourdomain.com
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ===== DEVELOPMENT SETTINGS =====
NODE_ENV=development
DEBUG_MODE=true
MOCK_AFFILIATE_APIs=true

# ===== PRODUCTION SETTINGS =====
# Uncomment for production deployment
# NODE_ENV=production
# DEBUG_MODE=false
# MOCK_AFFILIATE_APIs=false
# HTTPS_REDIRECT=true